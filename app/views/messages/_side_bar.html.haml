.side-bar
  .side-header
    %h2.side-header__user-name
      = current_user.name
    %ul.side-header__lists
      %li.side-header__list
        = link_to new_group_path do
          = icon('fa', 'edit', class: 'icon')
      %li.side-header__list
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__group-name
            = group.name
